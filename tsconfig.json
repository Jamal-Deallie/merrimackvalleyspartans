{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/containers/*": ["./containers/*"],
      "@/data/*": ["src/data/*"],
      "@/src/*": ["./src/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/styles/*": ["/styles/*"],
      "@/helpers/*": ["helpers/*"],
      "@/animations/*": ["./animations/*"],
      "@/svgs/*": ["./svgs/*"],
      "@/shared/*": ["./shared/*"],
      "@/typings/*": ["types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/Carousel.tsx", "src/helpers/horizontalLoop.ts"],
  "exclude": ["node_modules"]
}
